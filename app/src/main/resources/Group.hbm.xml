<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "by.dutov.jee.group.Group" table = "&quot;group&quot;">

        <id name = "id" type = "int">
            <column name="id"/>
            <generator class="identity"/>
        </id>

        <one-to-one name="teacher"  class="by.dutov.jee.people.Teacher" cascade="all"/>

        <set name="students" table="group_student" inverse="true">
            <key column="group_id" not-null="false" />
            <many-to-many column="student_id" class="by.dutov.jee.people.Student"/>
        </set>

    </class>
</hibernate-mapping>